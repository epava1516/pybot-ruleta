# .env.example — plantilla de variables de entorno

# Token del bot de Telegram
TOKEN=

# Dominio donde se expondrá el webhook
DOMAIN=

# Ruta personalizada del webhook (opcional, por defecto usa el token)
WEBHOOK_PATH=

# Archivo de datos donde se guardan los resultados
DATA_FILE=data/rolls.json

# Tamaño por defecto de la ventana de análisis
DEFAULT_WINDOW=15

# Límite de datos en historia (None = sin límite)
DEFAULT_DATA_LIMIT=

# Modo de ejecución: development, production
ENVIRONMENT=production

# Nivel de log: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

