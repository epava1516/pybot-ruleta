TOKEN=REEMPLAZAR_CON_TOKEN_TELEGRAM

# --- App / almacenamiento ---
# Ruta del JSON (persistido si montas un volumen a ./data)
DATA_FILE=data/rolls.json
# Tama침o de ventana por defecto (int)
DEFAULT_WINDOW=15
